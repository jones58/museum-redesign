{
  "name": "mondaine-clock-react",
  "version": "1.0.2",
  "description": "Unofficial implementation of the official Swiss station clock by Mondaine",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OrbiterToad/mondaine-clock-react.git"
  },
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",

    "prepare": "npm run build",

    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\""
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [],
  "author": "OrbiterToad",
  "license": "MIT",
  "dependencies": {
    "@types/react": "^16.14.48",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "typescript": "^4.1.6"
  }
}
